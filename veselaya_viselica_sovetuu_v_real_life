you_tray,word,l,schet,bivshie=6,random_word(word_list),0,0,[]
word_list.remove(word)
start="_"*len(word)
print("Привет , у тебя имеется 6 попыток , чтобы отгадать это слово")
while True:
    l=-1
    print(display_hangman(you_tray))
    print(start)
    print("Введите букву !")
    symbol=input().lower()
    while proverka(symbol)==False:
        print("Ты неверно ввел значение(надо писать только русскими буквами!) , введи букву еще раз")
        symbol=input().lower()
    while symbol in bivshie:
        print("Ты уже вводил эту букву, попробуй другую")
        symbol=input().lower()
    if(symbol in word):
        for j in range(word.count(symbol)):
            l=word.find(symbol,l+1,)
            start=start[:l]+symbol+start[l+1:]
            schet+=1
    else:
        print("К сожалению вы не угалали")
        you_tray-=1
    if(schet==len(word)):
        print("Молодец , у тебя получилось отгадать слово! Хочешь отгдать слово '",start,"' еще раз ? 1- да , 0 - нет")
        if (povtor(input())):
            you_tray, word, l, schet = 6, random_word(word_list), 0, 0
            start = "_" * len(word)
            word_list.remove(word)
        else:
            break
    print("У тебя осталось ", you_tray , "попыток !")
    if(you_tray==0):
        print("Тебя повесили( , загаданное слово было - ",word)
        print("Хотите отгадать слово еще раз? 1 - да , 0 -нет")
        if(povtor(input())):
            you_tray, word, l, schet = 6, random_word(word_list), 0, 0
            start = "_" * len(word)
            word_list.remove(word)
        else:
            break
    bivshie.append(symbol)
print("Спасибо за игру , приходите еще! ")
