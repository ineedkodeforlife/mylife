import random
word_list=["конь","слон","червяк","таракан","букашка","марципан","светофор","агроном","кукла","гномик","лава","бумага","лошадь","сила"]
def random_word(list):
    return random.choice(list)
def povtor(znachenie):
    return znachenie=="1"
def proverka(symbol):
    return 1072<=ord(symbol)<=1103
